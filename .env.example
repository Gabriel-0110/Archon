# MongoDB Configuration
# Choose one of the following options:

# Option 1: MongoDB Atlas (recommended)
MONGODB_CONNECTION_STRING=mongodb+srv://username:password@cluster.mongodb.net/archon?retryWrites=true&w=majority

# Option 2: Self-hosted MongoDB
# MONGODB_HOST=localhost
# MONGODB_PORT=27017
# MONGODB_DATABASE=archon
# MONGODB_USERNAME=your-username
# MONGODB_PASSWORD=your-password
# MONGODB_TLS=false

# OpenAI API Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Server Configuration
PORT=8181
HOST=0.0.0.0

# Optional: Observability
LOGFIRE_TOKEN=your-logfire-token
LOG_LEVEL=INFO

# Optional: RAG Strategy Configuration
USE_CONTEXTUAL_EMBEDDINGS=false
USE_HYBRID_SEARCH=true
USE_AGENTIC_RAG=true
USE_RERANKING=true

# Optional: Performance Tuning
DOCUMENT_STORAGE_BATCH_SIZE=50
CONTEXTUAL_EMBEDDING_BATCH_SIZE=50
CONTEXTUAL_EMBEDDINGS_MAX_WORKERS=4